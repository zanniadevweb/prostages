{% extends 'base.html.twig' %}

{% block title %}Page accueil Bienvenue{% endblock %}

 {% block entete %}
 		<div class="card">
		  <div class="card-header">
			<div class="card-body">
				<blockquote class="blockquote mb-0">
					<h1> Bienvenue sur la page d'accueil de Prostages </h1>
				</blockquote>
			</div>
		  </div>
		</div>
 {% endblock %}

{% block body %}

<div class="container-fluid">
  <div class="row">
  		{%for stage in stages%}
			<div class="col-md-4 col-xs-1 mx-auto">
				<div class="card">
					<div class="card-body">
					<img src="https://picsum.photos/id/1/300/" class="card-img-top" alt="Image">
					  <h5 class="card-title">Titre : {{stage.titre}} </h5>
					  <p class="card-text">Domaine : {{stage.domaine}}</p>
					  <p class="card-text">Durée : {{stage.duree}}</p>
					  <p class="card-text">Dates : {{stage.dateDebut | date("d/m/Y")}} – {{stage.dateFin | date("d/m/Y")}}</p>
					  <a href="{{path('prostages_stages',{'id' : stage.id})}}" class="btn btn-primary">Plus de détails</a>
					</div>
				</div>
			</div>
		{%endfor%}
    </div>
</div>

{% endblock %}

