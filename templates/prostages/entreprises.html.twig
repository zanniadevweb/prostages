{% extends 'base.html.twig' %}

{% block title %}Page entreprises{% endblock %}

{% block body %}

<h1> Cette page affichera la liste des entreprises proposant un stage </h1>

<div class="container-fluid">
  <div class="row">
  		{%for entreprise in entreprises%}
		<div class="col-md-4 col-xs-1 mx-auto">
			<div class="card">
				<div class="card-body">
				  <h5 class="card-title">Nom : {{entreprise.nom}}</h5>
				  <p class="card-text">Adresse : {{entreprise.adresse}}</p>
				  <p class="card-text">Activit√© : {{entreprise.activite}}</p>
				  <p class="card-text">Telephone : {{entreprise.telephone}}</p>
				  <p class="card-text">URL : {{entreprise.url}}</p>
				</div>
			</div>
		</div>
		{%endfor%}
    </div>
</div>

{% endblock %}

